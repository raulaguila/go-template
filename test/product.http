@host = http://127.0.0.1:9000
@lang = en
@accesstoken = {{login.response.body.$.accesstoken}}
@id = {{create.response.body.$.id}}

###

# @name login
POST {{host}}/auth?lang={{lang}} HTTP/1.1
Content-Type: application/json

{
  "email": "admin@admin.com",
  "password": "12345678"
}

###

# @name getAll
GET {{host}}/product?lang={{lang}}&page=1&limit=5&order=asc&sort=name HTTP/1.1
Authorization: Bearer {{accesstoken}}

###

# @name getByID
GET {{host}}/product/{{id}}?lang={{lang}} HTTP/1.1
Authorization: Bearer {{accesstoken}}

###

# @name create
POST {{host}}/product?lang={{lang}} HTTP/1.1
Authorization: Bearer {{accesstoken}}
Content-Type: application/json

{
  "name": "Product Created"
}

###

# @name updateByID
PUT {{host}}/product/{{id}}?lang={{lang}} HTTP/1.1
Authorization: Bearer {{accesstoken}}
Content-Type: application/json

{
  "name": "Product Updated"
}

###

# @name deleteByID
DELETE {{host}}/product/{{id}}?lang={{lang}} HTTP/1.1
Authorization: Bearer {{accesstoken}}